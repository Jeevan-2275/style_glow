backend/
├── config/
│   ├── db.js                # Database connection
│   ├── env.js              # Database connection
├── controllers/
│   ├── authController.js    # Authentication logic
│   ├── userController.js    # User-specific logic
│   ├── salonController.js   # Salon-specific logic
│   ├── productController.js # Product-specific logic
│   ├── bookingController.js # Booking-specific logic
├── models/
│   ├── User.js              # User schema
│   ├── Salon.js             # Salon schema
│   ├── Product.js           # Product schema
│   ├── Booking.js           # Booking schema
├── routes/
│   ├── authRoutes.js        # Authentication routes
│   ├── userRoutes.js        # User-specific routes
│   ├── salonRoutes.js       # Salon-specific routes
│   ├── productRoutes.js     # Product-specific routes
│   ├── bookingRoutes.js     # Booking-specific routes
├── middleware/
│   ├── authMiddleware.js    # Authentication middleware
│   ├── roleMiddleware.js    # Role-based access control
├── utils/
│   ├── emailSender.js       # Email notifications
│   ├── geolocation.js       # Location-based services
├── services/
│   ├── authService.js       # Authentication logic
│   ├── userService.js       # User-specific logic
│   ├── salonService.js      # Salon-specific logic
│   ├── productService.js    # Product-specific logic
│   ├── bookingService.js    # Booking-specific logic
├── app.js                   # Main application file
├── server.js                # Server entry point
├── .env                     # Environment variables
├── package.json             # Dependencies and scripts